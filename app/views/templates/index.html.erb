<!-- app/views/templates/index.html.erb -->
<div class="container " ng-controller="TodoListController">
  <h1>Todo リスト</h1>
  <div class="col-md-6">
  <div class="panel panel-default">

    <div class="panel-heading">
      <span>{{list.name}}</span>
    </div>

    <form name="new_todo" id="new_todo" ng-submit="addTodo(todoDescription)" novalidate>
      <div class="input-group">
        <input type="text" name="todoDescription" id="todoDescription" class="form-control input-md" 
        placeholder="Add a Todo..." autofocus="autofocus" autocomplete="off" maxlength="255" 
        ng-model="todoDescription" required />
        <!-- <span ng-show="new_todo.todoDescription.$error.required">hogehoge</span> -->
        <button class="btn btn-info btn-md" type="submit" ng-disabled="new_todo.$invalid" >Add</button>
      </div>
    </form>
  
    <ul class="list-group">
      <div class="random-button">
        <button class="btn btn-default btn-xs center-block" type="button" ng-click="randTodo()">Crazy Todo!</button>
      </div>
      <li class="list-group-item" ng-repeat="todo in list.todos" ng-class="{completed: todo.completed}">
        <div class="todo-completed">
          <input type="checkbox" ng-model="todo.completed">
        </div>
        <div class="todo-description">
          <span>{{todo.description}}</span>
        </div>
        <div class="todo-buttons pull-right">
          <div class="delete-button pull-right">
            <button class="btn btn-danger btn-xs pull-right" type="button" ng-click="deleteTodo(todo)">DEL
            </button>
          </div>
          <button class="btn btn-default btn-xs pull-right" type="button" ng-click="upTodo(todo)">UP
          </button>
        </div>
      </li>
    </ul>
  </div>
  </div>
</div>